{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "sourceMap": true,
    "target": "es6",
    "strict": true
  },
  "exclude": [
    "./node_modules/",
    "./dist/",
    "./tmp.ts",
    "./config/",
    "./scripts/"
  ],
  "include": [
    "./src/*.ts",
    "./src/core/*.ts",
    "./src/bridge/*.ts",
    "./src/verification/*.ts",
    "./src/incremental/*.ts"
  ]
}
