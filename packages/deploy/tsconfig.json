{
  "extends": "../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./lib/",
    "rootDir": "./src/"
  },
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./config/",
    "./scripts/",
    "./tmp.ts"
  ],
  "include": [
    "./src/*.ts",
    "./src/core/*.ts",
    "./src/bridge/*.ts",
    "./src/verification/*.ts",
    "./src/incremental/*.ts"
  ]
}
