{
  "extends": "../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    /*
      TODO: should remove "skipLibCheck": true

      Workaround for conflicting identifier 'process' when
      using a custom.d.ts file and trying to define the
      process.env variables to avoid lint errors.
    */
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./src/tmp.ts"
  ],
  "include": [
    "src/*.ts"
  ],
  "references": [
    { "path": "../sdk" },
    { "path": "../sdk-bridge" }
  ]
}
